    <groupId>org.osgilab.testing.it</groupId>
    <artifactId>it.commons.spring.osgi</artifactId>
    <version>1.0-SNAPSHOT</version>

    <name>OSGi Lab Testing - Integration Tests Commons: Spring OSGi</name>
    <description>OSGi Lab Testing - Integration Test Commons: Spring OSGi</description>

    <developers>
        <developer>
            <name>Dmytro Pishchukhin</name>
            <timezone>GMT+1</timezone>
        </developer>
    </developers>

    <organization>
        <name>OSGi Lab</name>
        <url>http://osgilab.org</url>
    </organization>

    <licenses>
        <license>
            <name>The MIT License</name>
            <url>http://code.google.com/p/osgilab/wiki/License</url>
        </license>
    </licenses>

    <issueManagement>
        <system>Google</system>
        <url>http://code.google.com/p/osgilab/issues</url>
    </issueManagement>

    <scm>
        <url>
            http://code.google.com/p/osgilab/source/browse/#svn/trunk/org.osgilab.testing/it/it.commons/it.commons.spring.osgi
        </url>
        <connection>
            scm:svn:http://code.google.com/p/osgilab/svn/trunk/org.osgilab.testing/it/it.commons/it.commons.spring.osgi
        </connection>
        <developerConnection>
            scm:svn:http://code.google.com/p/osgilab/svn/trunk/org.osgilab.testing/it/it.commons/it.commons.spring.osgi
        </developerConnection>
    </scm>

    <dependencies>
        <dependency>
            <groupId>org.osgilab.testing</groupId>
            <artifactId>commons</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.osgi</groupId>
                    <artifactId>org.osgi.core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.osgi</groupId>
                    <artifactId>org.osgi.compendium</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.junit</groupId>
            <artifactId>com.springsource.junit</artifactId>
            <version>3.8.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse</groupId>
            <artifactId>osgi</artifactId>
            <version>3.5.1.R35x_v20090827</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.osgi</groupId>
            <artifactId>spring-osgi-test</artifactId>
            <version>1.2.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.osgi</groupId>
            <artifactId>spring-osgi-core</artifactId>
            <version>1.2.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.osgi</groupId>
            <artifactId>spring-osgi-extender</artifactId>
            <version>1.2.1</version>
            <scope>test</scope>

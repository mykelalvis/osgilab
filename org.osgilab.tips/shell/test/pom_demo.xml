    <profiles>
         <profile>
             <id>equinox</id>
             <build>
                 <defaultGoal>pax:provision</defaultGoal>
                 <plugins>
                     <plugin>
                         <groupId>org.ops4j</groupId>
                         <artifactId>maven-pax-plugin</artifactId>
                         <version>1.4</version>
                         <configuration>
                             <framework>equinox</framework>
                             <provision>
                                 <param>--workingDirectory=target/runner</param>
                                 <param>mvn:org.osgilab.tips.shell/equinox/${project.version}@3</param>
                                 <param>mvn:org.osgilab.tips.shell/test/${project.version}@3</param>
                             </provision>
                         </configuration>
                     </plugin>
                 </plugins>
             </build>
         </profile>
